<%= component_fields_for @record do |f| %>
  <dt><%= f.label field.field_name %></dt>
  <dd class="date_range">
    <%= f.text_field "#{field}_from", field.input_options.merge("data-calendar" => "{showButtons: true, listYears: true, format: '#{@format}'}", :autocomplete => :off) %>
    <%= f.text_field "#{field}_till", field.input_options.merge("data-calendar" => "{showButtons: true, listYears: true, format: '#{@format}'}", :autocomplete => :off) %>
  </dd>
<% end %>