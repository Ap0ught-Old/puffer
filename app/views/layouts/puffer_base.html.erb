<!DOCTYPE html>
<html>
  <head>
    <title><%= [@title, 'Puffer'].compact.join(' - ') %></title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag    "puffer/application" %>
    <%= javascript_include_tag "puffer/application" %>
    <%= yield :stylesheets %>
    <%= yield :javascripts %>
  </head>
  <body>
    <div class="body">
      <div class="header">
        <div class="logo">
          <%= link_to t('puffer.logo'), admin_root_path %>
        </div>
        <%= yield :header %>
        <% if respond_to?(:current_user) && !current_user %>
          <div class="logout">
            <%= link_to t('puffer.logout'), admin_session_url, :method => :delete %>
          </div>
        <% end %>
      </div>
      <%= yield :content %>
    </div>
  </body>
</html>
