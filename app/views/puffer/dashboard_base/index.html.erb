<h2><%= puffer_namespace.to_s.humanize %></h2>
<ul class="navigation">
  <% puffer_groups_navigation do |group| %>
    <li>
      <span><%= group.to_s.humanize %></span>
      <ul class="additional">
        <% puffer_resources_navigation group do |resource, url| %>
          <li>
            <%= link_to resource, url %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
